    <children>
        <ImageView
                fx:id="itemImage"
                fitHeight="150.0"
                fitWidth="200.0"
                pickOnBounds="true"
                preserveRatio="true" />

        <VBox prefHeight="150.0" prefWidth="370.0" spacing="10.0">
            <children>
                <Label fx:id="itemTitle" text="Title Goes Here">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
