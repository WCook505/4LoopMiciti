                <Label fx:id="itemParagraph" text="This is the placeholder paragraph. The actual text will go here and it will wrap nicely if it's long." wrapText="true" />
                <Button fx:id="itemButton" mnemonicParsing="false" onAction="#handleButtonAction" text="Learn More" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
